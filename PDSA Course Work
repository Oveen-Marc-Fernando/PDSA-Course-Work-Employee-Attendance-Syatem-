package pdsa1;

import java.util.Scanner;

class Node {
    int data;
    String name;
    Node next;
    Node prev;

    public Node(int data, String name) {
        this.data = data;
        this.name = name;
        this.next = null;
        this.prev = null;
    }
}

class Link {
    Node head;

    public void insert(int data, String name) {
        Node node = new Node(data, name);

        if (head == null) {
            head = node;
        } else {
            Node last = head;

            while (last.next != null) {
                last = last.next;
            }
            last.next = node;
            node.prev = last;
        }
    }

    public void show() {
        Node node = head;
        while (node != null) {
            System.out.print(node.data + "   ");
            System.out.println(node.name);
            node = node.next;
        }
    }
     public void Attendance() {
        Node node = head;
        int index = 1;
         while (node != null) {
            if (index > 20) {
                System.out.print(node.data+" ");
                System.out.println(node.name);
            }

            node = node.next;
            index++;
        }
    }

    public void insertAtStart(int data, String name) {
        Node node = new Node(data, name);
        node.next = head;
        if (head != null) {
            head.prev = node;
        }
        head = node;
    }

    public void insertAtMiddle(int index, int data, String name) {
        Node node = new Node(data, name);

        if (index == 0) {
            insertAtStart(data, name);
        } else {
            Node current = head;
            for (int i = 0; i < index - 1 && current != null; i++) {
                current = current.next;
            }

            if (current != null) {
                node.next = current.next;
                node.prev = current;
                if (current.next != null) {
                    current.next.prev = node;
                }
                current.next = node;
            }
        }
    }

    public void delete(int index) {
        if (head == null) {
            System.out.println("List is empty");
            return;
        }

        if (index == 0) {
            head = head.next;
            if (head != null) {
                head.prev = null;
            }
        } else {
            Node current = head;
            for (int i = 0; i < index && current != null; i++) {
                current = current.next;
            }

            if (current != null) {
                if (current.prev != null) {
                    current.prev.next = current.next;
                }
                if (current.next != null) {
                    current.next.prev = current.prev;
                }
                System.out.println("Value deleted: " + current.data);
            }
        }
    }
}

public class PDSA1 {
    public static void main(String[] args) {
       
        Scanner scanner = new Scanner(System.in);

        Link employeeAttendanceList = new Link();

        System.out.println("Employee Details "); 
        employeeAttendanceList.insert(1, "Kasun");
        employeeAttendanceList.insert(2, "Nipun");
        employeeAttendanceList.insert(3, "Aravinda");
        employeeAttendanceList.insert(4, "Nethra");
        employeeAttendanceList.insert(5, "Ayesh");
        employeeAttendanceList.insert(6, "Savindu");
        employeeAttendanceList.insert(7, "Nadith");
        employeeAttendanceList.insert(8, "Saman");
        employeeAttendanceList.insert(9, "Nohim");
        employeeAttendanceList.insert(10, "Kisara");
        employeeAttendanceList.insert(11, "Binura");
        employeeAttendanceList.insert(12, "Gimras");
        employeeAttendanceList.insert(13, "Rasindu");
        employeeAttendanceList.insert(14, "Indika");
        employeeAttendanceList.insert(15, "Nuwan");
        employeeAttendanceList.insert(16, "Asindu");
        employeeAttendanceList.insert(17, "Thiwanka");
        employeeAttendanceList.insert(18, "Heshan");
        employeeAttendanceList.insert(19, "Vihangi");
        employeeAttendanceList.insert(20, "Rashmika");
        employeeAttendanceList.show();

        
        
        for (int i = 0; i < 5; i++) {
            String correctUsername1 = "Oveen";
            String correctPassword1 = "tvbm9035";

            String correctUsername2 = "vinuja";
            String correctPassword2 = "123456";

            System.out.print("Enter username: ");
            String enteredUsername = scanner.nextLine();

            System.out.print("Enter password: ");
            String enteredPassword = scanner.nextLine();

            if ((enteredUsername.equals(correctUsername1) && enteredPassword.equals(correctPassword1)) ||
                (enteredUsername.equals(correctUsername2) && enteredPassword.equals(correctPassword2))) {
                System.out.println("Authentication successful. Welcome, " + enteredUsername + "!");

                for (int p = 0; p < 5; p++) {
                    System.out.println("Select option : ");
                    System.out.println("1: Insert    2: Delete");
                    String type = scanner.next();

                    if (type.equals("Insert") || type.equals("insert") || type.equals("1")) {
                        System.out.print("Insert employee ID : ");
                        int attendance = scanner.nextInt();
                        scanner.nextLine(); 

                        System.out.print("Enter employee name: ");
                        String employeeName = scanner.nextLine();

                        employeeAttendanceList.insert(attendance, employeeName);
                        System.out.println("Updated Employee Attendance List:");
                        employeeAttendanceList.Attendance();
                        
                    } else if (type.equals("Delete") || type.equals("delete") || type.equals("2")) {
                        System.out.print("Enter the index to delete: ");
                        int deleteIndex = scanner.nextInt();
                        scanner.nextLine();

                        employeeAttendanceList.delete(deleteIndex - 1);
                        System.out.println("Element at index " + deleteIndex + " deleted.");
                        System.out.println("Updated Employee Attendance List:");
                        employeeAttendanceList.Attendance();
                        System.out.println("");
                    }
                }
            } else {
                System.out.println("Authentication failed. Incorrect username or password.");
            }
        }
     scanner.close(); 
    }
}
